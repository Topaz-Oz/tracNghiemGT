<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#00c3ff"
            android:endColor="#76F4FB"
            android:angle="45"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00c3ff"
                android:endColor="#DBEBEB"
                android:angle="45"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
